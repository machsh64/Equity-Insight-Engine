# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/equity_insight_engine

# OpenAI API配置（传统方式，兼容旧配置）
OPENAI_API_KEY=your_openai_api_key_here

# AI服务配置（推荐使用，支持自定义AI服务）
# 自定义AI服务URL（可选，不设置则使用OpenAI默认URL）
AI_SERVICE_URL=

# AI模型名称（默认: gpt-4）
AI_SERVICE_MODEL=gpt-4

# AI服务API Key（如果与OPENAI_API_KEY不同，优先使用此配置）
# 如果设置了AI_SERVICE_URL，建议使用此配置
# 注意：如果使用自定义AI服务，此配置是必需的
AI_SERVICE_API_KEY=

# 其他LLM服务配置（可选）
ANTHROPIC_API_KEY=your_anthropic_key
GROK_API_KEY=your_grok_key

# 服务器配置
HOST=0.0.0.0
PORT=8000

